// ui
include ~@mixins/Ui-mixins/button
include ~@mixins/Ui-mixins/popup
include ~@mixins/Ui-mixins/social
include ~@mixins/Ui-mixins/accordion
include ~@mixins/Ui-mixins/input
include ~@mixins/Ui-mixins/select

block vars

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    title #{title}
  body
    include ~@components/menu.pug
    include ~@components/submit-application.pug
    include ~@components/header.pug
    main
      block content
    include ~@components/asked-questions
    include ~@components/footer.pug
